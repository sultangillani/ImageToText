<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <title>Realtime File Upload Preview</title>
  <style>
    body { font-family: Arial, sans-serif; background-color: #f8f9fa; }
    .preview img { max-width: 250px; border: 2px solid #ddd; border-radius: 8px; padding: 5px; background: #fff; }
    .form-section { background: #fff; padding: 25px; border-radius: 10px; box-shadow: 0px 2px 10px rgba(0,0,0,0.1); margin-bottom: 30px; }
    .table img { max-width: 120px; border-radius: 6px; }
    .btn-custom { background-color: #0d6efd; color: #fff; border-radius: 6px; padding: 8px 15px; border: none; }
    .btn-custom:hover { background-color: #084298; }
  </style>
</head>
<body>
  <div class="container my-5">

    <h2 class="text-center mb-4">üìÇ Upload a File & Preview in Realtime</h2>

    <!-- Upload Form -->
    <div class="form-section">
      <form id="uploadForm" action="/convert" method="POST" enctype="multipart/form-data" class="row g-3 align-items-center">
        <div class="col-md-8">
          <input type="file" class="form-control" id="fileInput" name="image_item" accept="image/*" required>
        </div>
        <div class="col-md-4">
          <button type="submit" class="btn btn-custom w-100">Read Image</button>
        </div>
      </form>

      <!-- Preview -->
      <div class="preview text-center mt-4" id="preview">
        <% if(locals.image){ %>
          <img src="<%= image %>" class="img-fluid shadow" /> 
        <% } %>
      </div>

      <!-- Extracted Text -->
      <div class="imageText text-center mt-3">
        <% if(locals.text){ %>
          <p class="alert alert-secondary"><%= text %></p> 
        <% } %>
      </div>
    </div>

    <!-- Images Table -->
    <div class="form-section">
      <h4 class="mb-3">üìã Uploaded Images</h4>
      <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle text-center">
          <thead class="table-dark">
            <tr>
              <th>S.No</th>
              <th>Image Name</th>
              <th>Preview</th>
              <th>Image Text</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% if(locals.allimages){ %>
              <% allimages.forEach((image,index) => { %>
                <tr>
                  <td><%= index + 1 %></td>
                  <td><%= image.ImageName %></td>
                  <td>
                    <a href="<%= image.ImageUrl %>" target="_blank">
                      <img src="<%= image.ImageUrl %>" alt="Uploaded Image">
                    </a>
                  </td>
                  <td><%= image.ImageText %></td>
                  <td>
                    <a href="<%= siteURL %>delete/<%= image.ImageName %>" class="btn btn-danger btn-sm">Delete</a>
                  </td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr><td colspan="5" class="text-muted">No images uploaded yet.</td></tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Delete Form -->
    <div class="form-section">
      <h4 class="mb-3">üóëÔ∏è Delete Entry</h4>
      <form id="DeleteForm" action="/delete" method="POST" class="row g-3">
        <div class="col-md-9">
          <input type="text" id="image_name" class="form-control" name="image_name" placeholder="Enter Image Name" required>
        </div>
        <div class="col-md-3">
          <button type="submit" class="btn btn-danger w-100">Delete Image</button>
        </div>
      </form>
    </div>

  </div>

  <script>
    const fileInput = document.getElementById('fileInput');
    const preview = document.getElementById('preview');

    fileInput.addEventListener('change', function() {
      const file = this.files[0];
      preview.innerHTML = ""; // clear previous preview

      if (file) {
        const reader = new FileReader();
        reader.onload = function(e) {
          const img = document.createElement('img');
          img.src = e.target.result;
          img.classList.add("img-fluid", "shadow");
          preview.appendChild(img);
        }
        reader.readAsDataURL(file);
      } else {
        preview.innerHTML = "<p class='text-muted'>No file selected.</p>";
      }
    });
  </script>
</body>
</html>
